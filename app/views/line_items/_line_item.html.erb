<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td><%= line_item.quantity %>&times;<%# line_item.price %></td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price, :unit => "Rp ", :separator => ",") %></td>

</tr>
<tr>
  <td colspan="3"><%= button_to 'Remove Item', decrement_line_item_path(line_item), method: :put, remote: true %></td>
</tr>